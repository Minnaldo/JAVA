package ssafy_chap04_190722;

/**Person 정보클래스 */
class Person {
	/** 이름 */
	String name;		//이름	//멤버변수 name
	/** 나이 */
	int age;			//나이
	/** 성별 */
	boolean gender;		//성별	//여 : true, 남 : false
	/** 주소 */
	String addr;		//주소
	
	/** Constructor (생성자) */
	Person(String _name, int _age, boolean _gender, String _addr){
		System.out.println("생성자");
		name = _name;
		age = _age;
		gender = _gender;
		addr = _addr;
	}
	
	//정보 메소드
	String info()
	{
		String str = "name="+name+", age="+age+", gender="+gender+", addr="+addr;
		return str;
	}
	
	
}