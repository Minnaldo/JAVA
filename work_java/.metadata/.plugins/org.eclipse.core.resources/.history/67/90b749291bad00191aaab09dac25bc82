package edu.ssafy.chap05.two;

public class HeroManager {
	private Hero[] heros;
	private int max = 10;
	private int index = 0;
	
	public HeroManager()
	{
		heros = new Hero[max];
	}
	
	
	public void addHero(Hero h)
	{
		if(index < max)
		{
			heros[index] = h;
			index++;
		}
		else
		{
			Hero[] temp = new Hero[max * 2];
			max *= 2;
			System.arraycopy(heros, 0, temp, 0, heros.length);
			heros = temp;
		}
	}
	
	public void modiHero(Hero h)
	{
		
	}
}
