package com.ssafy;

public class Magazine {
	private String isbn;
	private String title;
	private String author;
	private String publisher;
	private int price;
	private String desc;
	private int year;
	private int month;
	
	Magazine() {}
	
	Magazine(String isbn, String title, String author, String publisher, int price, String desc, int year, int month)
	{
		this.isbn = isbn;
		this.title = title;
		this.author = author;
		this.publisher = publisher;
		this.price = price;
		this.desc = desc;
		this.year = year;
		this.month = month;
	}
	
	public void setYear(int year)
	{
		if (year > 1900 || year <= 2100)
			this.year = year;
		else
			System.out.println("입력하신 년도는 범위 밖입니다.");
	}
	
	public int getYear()
	{
		return year;
	}
	
	public void setMonth(int month)
	{
		if(month > 0 && month <= 12)
			this.month = month;
		else
			System.out.println("입력하신 월은 범위를 벗어납니다.");
	}
	
	
	
	
	
	public String toString()
	{
		String str = isbn + "   | " + title + "  | " + author + "   | " + publisher + "   | " + price + "   | " + desc + "           | " + year + "." + month;
//		String str = "isbn="+isbn+", title="+title+", author="+author+", publisher="+publisher+", price="+price+", desc="+desc+", year="+year+", month="+month;
		return str;
	}
	
	
	
	

	
}
