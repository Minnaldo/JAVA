package Algorithm_1WEEK_D1;

public class sortsort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//선택 정렬 (Selection Sort)
		int[] arr = {7, 4, 2, 8, 9, 6, 3, 5, 0, 1};
		
		//첫번째 인덱스에 있는 값을 제일 크다고 가정하고 시작.
		//배열을 반복문으로 돌면서 큰 값이 발견되면 발견된 값을 저장.
		int max = arr[0];
		int max_index = 0;
		
		for(int i = 0; i < arr.length; i++)
		{
			System.out.println(arr[i]);
			//현재 탐색중인 arr의 i가 max보다 크다면,
			//max에 i를 저장.
			if (max < arr[i])
			{
				max = arr[i];
				max_index = i;
			}
		}
		
		//0번째 제일 큰 값 자리를 바꾸자
		int tmp = arr[0];
		arr[0] = arr[max_index];
		arr[max_index] = tmp;
				
		//두번째 (1번인덱스)가 제일 크다고 가정하고,
		//두번째 (1번인덱스)부터 끝까지 돌면서 더 큰놈이 발견되면 바꾸자.
		max = arr[1];
		max_index = 1;
		for(int i = 1; i < arr.length; i++)
		{
			
		}
	}

}
